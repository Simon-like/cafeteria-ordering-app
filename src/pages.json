{
  // 组件自动引入规则
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@/components/uni-$1.vue", // 匹配components目录内的vue文件
      "^vue-file-(.*)": "packageName/path/to/vue-file-$1.vue" // 匹配node_modules内的vue文件
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/login_regitser/login_regitser",
      "style": {
        "navigationBarTitleText": "登陆注册页"
      }
    },
    {
      "path": "pages/login_regitser/merchant/login_password",
      "style": {
        "navigationBarTitleText": "密码登录"
      }
    },
    {
      "path": "pages/login_regitser/merchant/forget/forget",
      "style": {
        "navigationBarTitleText": "找回密码"
      }
    },
    {
      "path": "pages/login_regitser/merchant/forget/forget_1",
      "style": {
        "navigationBarTitleText": "确认密码"
      }
    },
    {
      "path": "pages/login_regitser/merchant/phonelogin",
      "style": {
        "navigationBarTitleText": "手机号登录"
      }
    },
    {
      "path": "pages/merchant_end/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/merchant_end/shop/shop",
      "style": {
        "navigationBarTitleText": "店铺管理"
      }
    },
    {
      "path": "pages/merchant_end/order/order",
      "style": {
        "navigationBarTitleText": "订单管理"
      }
    },
    {
      "path": "pages/merchant_end/my/my",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/login_regitser/merchant/register/register_1",
      "style": {
        "navigationBarTitleText": ""
      }
    },
    {
      "path": "pages/login_regitser/merchant/register/register_2",
      "style": {
        "navigationBarTitleText": ""
      }
    },
    {
      "path": "pages/login_regitser/merchant/register/register_3",
      "style": {
        "navigationBarTitleText": ""
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  // 设置 TabBar
  "tabBar": {
    "color": "#333",
    "selectedColor": "#27ba9b",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/merchant_end/index/index",
        "iconPath": "static/tabs/home_default.png",
        "selectedIconPath": "static/tabs/home_selected.png"
      },
      {
        "text": "店铺管理",
        "pagePath": "pages/merchant_end/shop/shop",
        "iconPath": "static/merchant/tabs/category_default.png",
        "selectedIconPath": "static/tabs/category_selected.png"
      },
      {
        "text": "订单管理",
        "pagePath": "pages/merchant_end/order/order",
        "iconPath": "static/tabs/cart_default.png",
        "selectedIconPath": "static/tabs/cart_selected.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/merchant_end/my/my",
        "iconPath": "static/tabs/user_default.png",
        "selectedIconPath": "static/tabs/user_selected.png"
      }
    ]
  }
}
